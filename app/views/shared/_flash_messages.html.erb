<% if flash.any? %>
  <% flash.each do |type, message| %>
    <% flash_classes = case type
      when "success"
        "bg-emerald-100 border-emerald-400 text-emerald-700"
      when "notice"
        "bg-blue-100 border-blue-400 text-blue-700"
      when "error", "alert"
        "bg-red-50 border-red-400 text-red-700"
      else
        "bg-blue-50 border-blue-400 text-blue-700"
      end %>
    <div class="w-full px-4 sm:px-6 lg:px-8 <%= flash_classes %>">

      <div class="rounded-md p-4">
        <div class="max-w-screen-lg mx-auto">
          <div class="flex justify-center items-center gap-3">
            <% case type %>
            <% when "success" %>
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            <% when "notice" %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-blue-70">
                <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
              </svg>
            <% when "error", "alert" %>
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            <% else %>
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
            <% end %>
            <div class="ml-3">
              <p class="text-sm font-medium"><%= message %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>