<div class="w-full h-full flex flex-col items-center pt-16 pb-24">
  <div class="w-full max-w-lg">
    <h1 class="text-3xl font-bold">Sign up</h1>
    <p class="text-base text-gray-500">Please enter your email and password to create an account.</p>

    <%= form_with model: @user, url: registrations_path, class: "w-full" do |f| %>
      <%= render "shared/form_errors", object: @user %>

      <div class="mt-6 mb-4">
        <%= f.label :email_address, "Email", class: "block text-sm font-medium text-slate-800" %>
        <%= f.email_field :email_address, class: "mt-1 block w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Password", class: "block text-sm font-medium text-slate-800" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <%= f.button type: "submit", class: "w-full flex items-center justify-center gap-2 px-4 py-3 text-white bg-indigo-600 rounded-md hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-400" do %>
        <span>Sign Up</span>
        <i data-lucide="arrow-right" class="w-5 h-5"></i>
      <% end %>
    <% end%>
    <div class="flex justify-center">
      <%= link_to "Already have an account? Sign in", new_session_path, class: "text-sm text-center text-slate-500 hover:text-slate-700 transition-colors duration-400 my-3" %>
    </div>
    <section>
      <div class="w-full h-0.5 bg-slate-200 mt-5 mb-8 relative">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-white px-4 text-sm text-slate-500">OR</div>
      </div>
      <div class="flex items-center space-x-3">
        <button class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-white hover:bg-slate-50 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors duration-400">
          <%= image_tag "google-oauth-icon.png", class: "w-6 h-6" %>
          <span class="text-slate-600">Sign up with Google</span>
        </button>
        <button class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-slate-800 hover:bg-slate-900 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors duration-400">
          <%= image_tag "github-icon-white.svg", class: "w-6 h-6" %>
          <span class="text-slate-50">Sign up with GitHub</span>
        </button>        
      </div>
    </section>
  </div>
</div>
